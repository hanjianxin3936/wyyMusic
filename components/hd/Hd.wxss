/* components/hd/Hd.wxss */
.w-hd{
  width:100%;
  height: 102rpx;
  padding: 30rpx 0 20rpx 0;
}
.w-hd .w-hd-title .hd-t{
  font-size: 24rpx;
  color: #b3b3b3;
}
.w-hd-content{
  align-items: center;
  display: flex;
  flex-direction: row;
  justify-content: space-between; 
}
.w-hd-left{
  font-weight: 700;
}
.w-hd-left text{
  display: block;
  font-size: 36rpx;
}

.w-hd-right{
  display: block;
  padding: 8rpx 24rpx;
  height: 50rpx;
  
  text-align: center;
  border-radius: 26rpx;
  border: 1rpx solid rgba(241, 241, 241);
  box-sizing: border-box;
}
