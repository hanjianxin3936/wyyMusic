/* components/playList-nav/PlayList-nav.wxss */
.playlist-nav{
    position: absolute;
    top: 0;
    left: 0;
    border-bottom: 1rpx solid #dadada;
    padding: 0 20rpx;
    background: #fff;
    z-index: 99999999;
}
.page-section-spacing{
    height: 300rpx;
    overflow: hidden;
  }
  .scroll-view_x{
      width: 720rpx;
   white-space: nowrap;
    flex-wrap: wrap;
    overflow: hidden;

  }
  .scroll-view_x .scroll-view-item_H{
    display: inline-block;
    padding:0 30rpx;
    height: 64rpx;
    position: relative;
    vertical-align:top;
    white-space:normal ;
    line-height: 64rpx;
  }
  .scroll-view_x .scroll-view-item_H text{
      display: inline-block;
      height: 61rpx;
      font-size: 26rpx;
    
  }
  .scroll-view_x .scroll-view-item_H.active text{
    color: red;
     border-bottom: 5rpx solid red;
 
}
 
