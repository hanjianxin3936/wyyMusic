/* components/playbar/Playbar.wxss */
.playbar-c{
  position: relative;
  width: 100%;
  height: 100rpx;
  border-top: 1rpx solid #dadada;
  background-color: rgb(255, 255, 255,.9);
  display: flex;
  align-items: center;
  padding: 0 26rpx;
  box-sizing: border-box;
  z-index: 99999;
}
.playbar-c image{
  width: 64rpx;
  border-radius: 50rpx;
  margin-right: 20rpx;
}
.music-message{
  display: flex;
  flex-direction: column;
  width: 490rpx;

}
.music-message .music-name{
  font-size: 28rpx;
}
.music-message .music-singer{
  font-size: 20rpx;
  color: #999;
}
.playbar-c .iconfont.icon{
  font-size: 50rpx;
  margin-right: 34rpx;
}
